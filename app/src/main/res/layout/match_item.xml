<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:layout_marginBottom="16dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_match_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/dummy_date"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_team_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/dummy_home_team_name"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_match_date"
        app:layout_constraintTop_toBottomOf="@id/tv_match_date" />

    <TextView
        android:id="@+id/vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/vs"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_match_date"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toRightOf="@id/home_team_name"
        app:layout_constraintRight_toLeftOf="@id/away_team_name"
        app:layout_constraintStart_toStartOf="@+id/tv_match_date"
        app:layout_constraintTop_toBottomOf="@id/tv_match_date" />

    <TextView
        android:id="@+id/home_score"
        app:layout_constraintTop_toTopOf="@id/vs"
        app:layout_constraintRight_toLeftOf="@id/vs"
        android:layout_marginEnd="10dp"
        android:text="@string/dummy_score"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/away_score"
        app:layout_constraintTop_toTopOf="@id/vs"
        app:layout_constraintLeft_toRightOf="@id/vs"
        android:layout_marginStart="10dp"
        android:text="@string/dummy_score"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/away_team_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/dummy_away_team_name"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_match_date"
        app:layout_constraintTop_toBottomOf="@id/tv_match_date" />
</androidx.constraintlayout.widget.ConstraintLayout>